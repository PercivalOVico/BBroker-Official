# BBroker - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# DATABASE CONNECTION
# ============================================================================

# Neon PostgreSQL Database URL
# Format: postgresql://[user]:[password]@[host]/[database]?sslmode=require
DATABASE_URL="postgresql://neondb_owner:npg_ipzrL51dSefx@ep-quiet-glitter-ahng16tp-pooler.c-3.us-east-1.aws.neon.tech/neondb?sslmode=require&channel_binding=require"

# Database Pool Configuration (Optional)
DB_POOL_MIN=2
DB_POOL_MAX=10

# ============================================================================
# APPLICATION
# ============================================================================

# Node Environment
NODE_ENV=development

# Server Port
PORT=5000

# Application URL
APP_URL=http://localhost:5000

# ============================================================================
# AUTHENTICATION (Future)
# ============================================================================

# JWT Secret (Generate a strong random string)
# JWT_SECRET=your-super-secret-jwt-key-here

# Session Secret
# SESSION_SECRET=your-session-secret-here

# Token Expiration
# JWT_EXPIRATION=7d

# ============================================================================
# EXTERNAL SERVICES (Future)
# ============================================================================

# Email Service (SendGrid, Mailgun, etc.)
# EMAIL_SERVICE=sendgrid
# EMAIL_API_KEY=your-email-api-key
# EMAIL_FROM=noreply@bbroker.app

# SMS Service (Twilio, etc.)
# SMS_SERVICE=twilio
# TWILIO_ACCOUNT_SID=your-twilio-sid
# TWILIO_AUTH_TOKEN=your-twilio-token
# TWILIO_PHONE_NUMBER=+1234567890

# Cloud Storage (AWS S3, Cloudinary, etc.)
# STORAGE_SERVICE=cloudinary
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# Google Maps API
# GOOGLE_MAPS_API_KEY=your-google-maps-key

# Payment Gateway (Stripe)
# STRIPE_SECRET_KEY=sk_test_your-stripe-key
# STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
# STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ============================================================================
# DEVELOPMENT
# ============================================================================

# Enable Debug Logging
DEBUG=true

# Enable SQL Query Logging
LOG_SQL=false

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:5000

# ============================================================================
# PRODUCTION (Use in production environment)
# ============================================================================

